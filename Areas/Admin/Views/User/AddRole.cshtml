
@model AddRoleModel

@{
    ViewData["Title"] = "Add role";
    Layout = "_Layout";
}


<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form method="post" asp-action="AddRole">
                <h2>Select user role for @ViewData["FirstName"]</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <select asp-for="@Model.SelectedRoleId" asp-items="@Model.Roles" class="form-select form-select-sm mb-3" aria-label=".form-select-sm example">
                    </select>
                    <label asp-for="@Model.SelectedRoleId" class="form-label">Roles</label>
                    <span asp-validation-for="@Model.SelectedRoleId" class="text-danger"></span>
                </div>
                @Html.HiddenFor(m => m.UserId)
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </section>
    </div>
</div>

