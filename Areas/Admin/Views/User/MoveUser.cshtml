@model User

<div class="row justify-content-end">
    <a asp-action="Index">Back to List</a>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form method="post" asp-action="MoveUser">
                <h2>Move @Model.FirstName @Model.LastName to another department</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <select 
                        asp-for="@Model.DepartmentId" 
                        asp-items="ViewBag.DepartmentList" 
                        class="form-select form-select-sm mb-3"
                        aria-label=".form-select-sm example">
                    </select>
                    <label asp-for="@Model.DepartmentId" class="form-label">Departments</label>
                    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
                </div>
                @Html.HiddenFor(m => m.Id)
                <button type="submit" class="btn btn-primary">Move</button>
            </form>
        </section>
    </div>
</div>
