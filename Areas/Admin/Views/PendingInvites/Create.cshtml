@model WebChat.Data.PendingInvite

@{
    ViewData["Title"] = "Invite user";
}
<div class="row justify-content-end">
    <a asp-action="Index">Back to List</a>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form asp-action="Create">
                <h2>@ViewData["Title"]</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="FirstName" class="form-control"/>
                    <label asp-for="FirstName" class="control-label"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LastName" class="form-control"/>
                    <label asp-for="LastName" class="control-label"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control"/>
                    <label asp-for="Email" class="control-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PasswordHash" type="text" class="form-control"/>
                    <label asp-for="PasswordHash" class="control-label"></label>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentList"></select>
                    <label asp-for="DepartmentId" class="control-label">Department</label>
                </div>
                <div>
                    <button type="submit" value="Create" class="w-100 btn btn-lg btn-primary">Send Invitation</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
