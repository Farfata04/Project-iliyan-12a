@model IEnumerable<Department>

@{
    ViewData["Title"] = "";
    Layout = "_Layout";
}

<h2 class="depart">Departments</h2>
<link rel="stylesheet" href="~/css/IndexHome.css" asp-append-version="true" />


<div class="row justify-content-end">
    <a asp-action="Update" class="col-md-2 btn btn-success">Add Department</a>
</div>
<div class="row"  >
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DepartmentId)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DepartmentName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Users)</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var (dpt, index) in Model.Select((u, i) => (u, i)))
        {
            <tr>
                <th scope="row">@(index + 1)</th>
                <td>@Html.DisplayFor(m => dpt.DepartmentId)</td>
                <td>@Html.DisplayFor(m => dpt.DepartmentName)</td>
                <td>@Html.DisplayFor(m => dpt.Users.Count)</td>
                <td>
                    <a class="btn btn-link" asp-action="Update" asp-route-id="@dpt.DepartmentId">Edit</a>
                    <a class="btn btn-link" asp-action="ManageUsers" asp-route-id="@dpt.DepartmentId">Users</a>
                    <a class="btn btn-link text-danger" asp-action="Delete" asp-route-id="@dpt.DepartmentId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
